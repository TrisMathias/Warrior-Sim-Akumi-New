-- AKUMI HUB KEY SYSTEM ORION LIBRARY --
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Player = game.Players.LocalPlayer

-- Test Main Window
local MainWindow = OrionLib:MakeWindow({
    Name = "SCRIPT KEY",
    HidePremium = false,
    SaveConfig = true,
    IntroEnabled = false
})

OrionLib:MakeNotification({
    Name = "Welcome To AKUMI KEY!",
    Content = "You Are Logged In As "..Player.Name..".",
    Image = "rbxassetid://4483345998",
    Time = 5
})

-- Test Global Variables
_G.Key = "BILAT"
_G.KeyInput = ""

local function LoadTestHub()
    -- This function is now empty since all other content has been removed.
end

-- Notifications
local function ShowCorrectKeyNotification()
    OrionLib:MakeNotification({
        Name = "Correct Key!",
        Content = "Loading Test Hub...",
        Image = "rbxassetid://4483345998",
        Time = 2
    })
end

local function ShowIncorrectKeyNotification()
    OrionLib:MakeNotification({
        Name = "Incorrect Key!",
        Content = "Enter The Correct Key.",
        Image = "rbxassetid://4483345998",
        Time = 2
    })
end

-- Key System
local KeySystemTab = MainWindow:MakeTab({
    Name = "Key System",
    Icon = "rbxassetid://2790551206",
    PremiumOnly = false
})

KeySystemTab:AddTextbox({
    Name = "Enter Key Here!",
    Default = "Key",
    TextDisappear = true,
    Callback = function(Value)
        _G.KeyInput = Value
    end    
})

KeySystemTab:AddButton({
    Name = "Check Key!",
    Callback = function()
        if _G.KeyInput == _G.Key then
            ShowCorrectKeyNotification()
            wait(2)
            LoadTestHub()
        else
            ShowIncorrectKeyNotification()
        end
    end    
})
